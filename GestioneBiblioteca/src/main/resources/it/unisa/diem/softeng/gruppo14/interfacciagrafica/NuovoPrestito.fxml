<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="nuovoPrestitoPane" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unisa.diem.softeng.gruppo14.gestioneinterfaccia.NuovoPrestitoController">
   <children>
      <!-- Seleziona Utente e Libro -->
      <VBox layoutX="14.0" layoutY="14.0" prefHeight="556.0" prefWidth="500.0" spacing="10.0">
         <children>
            <Label text="Seleziona Utente">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <TableView fx:id="userTable" prefHeight="245.0" prefWidth="486.0">
               <columns>
                  <TableColumn fx:id="surnameClm" prefWidth="100.0" text="Cognome" />
                  <TableColumn fx:id="nameClm" prefWidth="100.0" text="Nome" />
                  <TableColumn fx:id="codeClm" prefWidth="100.0" text="Matricola" />
                  <TableColumn fx:id="mailClm" prefWidth="120.0" text="Email" />
               </columns>
            </TableView>

            <Label text="Seleziona Libro">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <TableView fx:id="bookTable" prefHeight="250.0" prefWidth="420.0">
               <columns>
                  <TableColumn fx:id="titleClm" prefWidth="150.0" text="Titolo" />
                  <TableColumn fx:id="authorClm" prefWidth="150.0" text="Autore" />
                  <TableColumn fx:id="numCopiesClm" prefWidth="120.0" text="Copie Disponibili" />
                  <TableColumn fx:id="pubYearClm" visible="false" />
                  <TableColumn fx:id="isbnClm" visible="false" />
               </columns>
            </TableView>
         </children>
      </VBox>

      <!-- Aggiungi Prestito -->
      <VBox layoutX="545.0" layoutY="14.0" prefHeight="556.0" prefWidth="325.0" spacing="10.0">
         <children>
            <Label text="Aggiungi Prestito">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Label text="Data Restituzione Prevista (GG/MM/AAAA):" />
            <TextField fx:id="dateLimitField" promptText="es. 31/12/2025" />
            <Button fx:id="addLoanButton" mnemonicParsing="false" onAction="#aggiungiPrestito" text="Registra Nuovo Prestito" />
         </children>
      </VBox>
   </children>
</AnchorPane>
